<%= form_for @book, :html => { :class => "form-horizontal book" } do |f| %>

  <% if @book.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @book.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%=f.error_span(:title) %>
  </div>
  <div class="form-group">
    <%= f.label 'Author', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>

  <div class="form-group">
    <%= f.label :isdn, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :isdn, :class => 'form-control' %>
    </div>
    <%=f.error_span(:isdn) %>
  </div>

  <div class="form-group">
    <%= f.label :offer_price, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :offer_price, :class => 'form-control' %>
    </div>
    <%=f.error_span(:offer_price) %>
  </div>
  <div class="form-group">
    <%= f.label :avatar, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.file_field :avatar, :class => 'form-control' %>
    </div>
    <%=f.error_span(:avatar) %>
  </div>

  <div class="form-group">
    <%= f.label :is_available_for_exchange, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.check_box :is_available_for_exchange %>
    </div>
    <%=f.error_span(:is_available_for_exchange) %>
  </div>

  <div class="form-group">
    <%= f.label :book_category, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :book_category, ['Fiction', 'Autobiography'], :class => 'form-control' %>
    </div>
    <%=f.error_span(:book_category) %>
  </div>

  <div class="form-group">
    <%= f.label :year_of_publication, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :year_of_publication, :class => 'form-control' %>
    </div>
    <%=f.error_span(:year_of_publication) %>
  </div>

  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :description, :class => 'form-control', :maxlength => 100 %>
    </div>
    <%=f.error_span(:description) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                books_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
